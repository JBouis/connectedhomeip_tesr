import("//build_overrides/chip.gni")
import("//build_overrides/stm32_sdk.gni")

import("${chip_root}/src/platform/device.gni")
import("${stm32_sdk_build_root}/stm32_sdk.gni")

declare_args() {
  # Build target to use for STM32 SDK. Use this to set global SDK defines.
  stm32_sdk_target = ""
}

assert(stm32_sdk_target != "", "stm32_sdk_target must be specified")

group("stm32_sdk") {
  public_deps = [ stm32_sdk_target ]
}

config("stm32_mbedtls_config") {
  if (stm32_family == "stm32h7") {
    defines = [ "MBEDTLS_USER_CONFIG_FILE=<examples/platform/stm32/config_files/mbedtls_user_config.h>" ]
 
    include_dirs = [
      chip_root,
      "${chip_root}/src/platform/STM32/include",

      #RELATED TO FREERTOS
      "${chip_root}/examples/platform/stm32/config_files",
      "${freertos_root}/repo/include",
      "${freertos_root}/repo/portable/GCC/ARM_CM7/r0p1/",
      "${freertos_root}/repo/portable",
     ]
  } else if (stm32_family == "stm32wb5") {
    defines = [ "MBEDTLS_USER_CONFIG_FILE=<examples/platform/stm32/config_files/STM32WB5/matter_config.h>" ]
 
    include_dirs = [
      chip_root,
      "${chip_root}/src/platform/STM32/include",
      "${chip_root}/examples/platform/stm32/config_files/STM32WB5/",

      #RELATED TO FREERTOS
#      "${freertos_st}/include",
#      "${freertos_st}/portable/GCC/ARM_CM4F",
#      "${freertos_st}/portable",
#      "${freertos_st}/CMSIS_RTOS_V2",
     ]
  }
}

mbedtls_target("mbedtls") {
  # Hardware acceleration
  if (stm32_family == "stm32h7") {  # || stm32_family == "stm32wb"
    sources = [

    ]
 }

  public_configs = [ ":stm32_mbedtls_config" ]
  public_deps = [ "${stm32_sdk_build_root}:stm32_sdk" ]
}
